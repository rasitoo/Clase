<UserControl x:Class="WpfEjem2.TreeDataView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfEjem2"

             mc:Ignorable="d" 
                          xmlns:vm="clr-namespace:WpfEjem2.ViewModels"
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.DataContext>
        <vm:TreeDataViewModel />
    </UserControl.DataContext>
    <Grid>
        <!--TreeView para mostrar la colección de tipos de lenguajes -->
        <TreeView x:Name="MainTreeView"
                  ItemsSource="{Binding LanguageTypes}"
                  HorizontalAlignment="Center"
                  VerticalAlignment="Center">
            <!--Plantilla jerárquica para los elementos del TreeView -->
            <TreeView.ItemTemplate>
                <HierarchicalDataTemplate ItemsSource="{Binding Languages}" DataType="{x:Type vm:LanguageType}">
                    <Label Content="{Binding Name}" />
                    <HierarchicalDataTemplate.ItemTemplate>
                        <DataTemplate DataType="{x:Type vm:Language2}">
                            <StackPanel Orientation="Horizontal">
                                <Label Content="{Binding Name}" />
                                <Label Content="{Binding CreationYear}" />
                            </StackPanel>
                        </DataTemplate>
                    </HierarchicalDataTemplate.ItemTemplate>
                </HierarchicalDataTemplate>
            </TreeView.ItemTemplate>
        </TreeView>
    </Grid>
</UserControl>


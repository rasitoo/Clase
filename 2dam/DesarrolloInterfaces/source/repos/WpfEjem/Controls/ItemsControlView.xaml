<UserControl x:Class="WpfEjem.ItemsControlView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfEjem"
             xmlns:vm="clr-namespace:WpfEjem.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.DataContext>
        <vm:ItemsControlViewModel />
    </UserControl.DataContext>
    <Grid>
        <!--ItemsControl para mostrar la colección de lenguajes -->
        <ItemsControl ItemsSource="{Binding Languages}"
                      VirtualizingPanel.IsVirtualizing="True">
            <!--Plantilla de datos para cada elemento de la colección -->
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <!--Borde alrededor de cada elemento -->
                    <Border BorderBrush="Gray" BorderThickness="1" Margin="5" Padding="5">
                        <!--Contenedor apilado horizontalmente -->
                        <StackPanel Orientation="Horizontal">
                            <!--Imagen del lenguaje -->
                            <Image Source="{Binding ImageUri}" Width="50" Height="50" Margin="0,0,10,0" />
                            <!--Contenedor apilado verticalmente para el texto -->
                            <StackPanel>
                                <!--Nombre del lenguaje -->
                                <TextBlock Text="{Binding Name}" FontWeight="Bold" />
                                <!--Tipo del lenguaje -->
                                <TextBlock Text="{Binding Type}" />
                                <!--Año de creación del lenguaje -->
                                <TextBlock Text="{Binding CreationYear}" />
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
            <!-- Panel de elementos para organizar los elementos -->
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <!-- Utilizar WrapPanel para organizar los elementos -->
                    <WrapPanel/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
        </ItemsControl>
    </Grid>
</UserControl>

<Window x:Class="ExamenRodrigoTapiador.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ExamenRodrigoTapiador"
        xmlns:p="clr-namespace:ExamenRodrigoTapiador.Properties"
        xmlns:c="clr-namespace:ExamenRodrigoTapiador.UI.Controls"
        mc:Ignorable="d"
        x:Name="this"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="2*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <ListView x:Name="ListArtists"
              ItemsSource="{Binding Artists}"
              SelectedItem="{Binding SelectedArtist, Mode=TwoWay}"
              HorizontalAlignment="Center"
              VerticalAlignment="Top"
              Margin="10"
              >
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Border BorderBrush="Gray" BorderThickness="1" Margin="5" Padding="5" Width="300">
                        <StackPanel Orientation="Vertical">
                            <TextBlock Text="{Binding Name}" FontWeight="Bold" />
                        </StackPanel>
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <!--<c:ListViewImages ItemsSource="{Binding Images}" SelectedImage="{Binding SelectedImage, Mode=TwoWay}" Grid.Column="1" VerticalAlignment="Top"/>-->

        <ListView x:Name="ListImages"
              ItemsSource="{Binding Images}"
              SelectedItem="{Binding SelectedImage, Mode=TwoWay}"
              HorizontalAlignment="Center"
              VerticalAlignment="Center"
              Grid.Column="1"
              Margin="10">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Border BorderBrush="Gray" BorderThickness="1" Margin="5" Padding="5" Width="300">
                        <StackPanel Orientation="Vertical">
                            <TextBlock Text="{Binding Title}" FontWeight="Bold" />
                            <TextBlock Text="{Binding Year}" />
                            <TextBlock Text="{Binding Genre.Name}" />
                        </StackPanel>
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
          
        </ListView>
        <Button Grid.Column="0" Grid.Row="1" Content="{x:Static p:Resources.Button}" Command="{Binding FilterButtonCommand}" Margin="10"/>

        <Image Source="{Binding SelectedImage.File}" Grid.Column="2"/>
    </Grid>
</Window>

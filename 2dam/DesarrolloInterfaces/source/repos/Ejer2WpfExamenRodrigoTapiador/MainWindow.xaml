<Window x:Class="Ejer2WpfExamenRodrigoTapiador.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ejer2WpfExamenRodrigoTapiador"
        mc:Ignorable="d"
        xmlns:p="clr-namespace:Ejer2WpfExamenRodrigoTapiador.Properties"
        Title="Ejerciccio 2: Cuadrado" Height="450" Width="800">
    <Grid>
        <RichTextBox x:Name="textBox" Width="250" HorizontalAlignment="Left"/>
        <Button x:Name="buttonUndo" Content="{x:Static p:Resources.BtUndo}" Command="Undo"  CommandTarget="{Binding ElementName=textBox}"  HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,105,0,0" Grid.Row="0" Width="250"/>
        <Button x:Name="buttonRedo" Content="{x:Static p:Resources.BtRedo}" Command="Redo"  CommandTarget="{Binding ElementName=textBox}"  HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,125,0,0" Grid.Row="0" Width="250"/>
        <Button x:Name="buttonCopy" Content="{x:Static p:Resources.BtCopy}" Command="Copy"  CommandTarget="{Binding ElementName=textBox}" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,145,0,0" Grid.Row="0" Width="250"/>
        <Button x:Name="buttonPaste" Content="{x:Static p:Resources.BtPaste}" Command="Paste"  CommandTarget="{Binding ElementName=textBox}"  HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,165,0,0" Grid.Row="0" Width="250"/>
        <Button x:Name="buttonOpen" Content="{x:Static p:Resources.BtOpen}" Command="Open"  HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,185,0,0" Grid.Row="0" Width="250"/>
        <Button x:Name="buttonSave" Content="{x:Static p:Resources.BtSave}" Command="Save"  HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,205,0,0" Grid.Row="0" Width="250"/>
        <Button x:Name="buttonExecute"  Content="{x:Static p:Resources.BtExecute}" Click="Execute_Click" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,225,0,0" Grid.Row="0" Width="250"/>
        <Rectangle x:Name="cuadrado" HorizontalAlignment="Right" Height="100" Stroke="Black" VerticalAlignment="Center" Width="100" Margin="0,0,50,0"/>
    </Grid>
    <Window.CommandBindings>
        <CommandBinding Command="ApplicationCommands.Save"
            Executed="SaveCommand_Executed"
            CanExecute="SaveCommand_CanExecute"/>
        <CommandBinding Command="ApplicationCommands.Open"
            Executed="OpenCommand_Executed"/>

    </Window.CommandBindings>
</Window>
